@{
    var isLoggedIn = Context.Request.Cookies.ContainsKey("token");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Final project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/front.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <ul class="nav"> 
                @if (isLoggedIn)
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="MainContent">Главная</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Project">Проекты</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Service">Услуги</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="BlogPost">Блог</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Contact">Контакты</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Рабочий стол</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-danger text-white" asp-controller="Account" asp-action="Logout">Выход</a></li>
                }
                else
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Главная</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Projects">Проекты</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Services">Услуги</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Blog">Блог</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contacts">Контакты</a></li>
                }
            </ul>
            <div class="ml-auto">
                @if (ViewBag.RandomContent != null)
                {
                    <div>
                        <h5>@ViewBag.RandomContent.HeaderContent</h5>
                        <p>@ViewBag.RandomContent.MenuButtonText</p>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Final project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
