@using front.Models.ContentModels
@model IEnumerable<ServiceModel>

@{
    ViewData["Title"] = "Service";
}

<h2>Услуги</h2>

<p>
    <a asp-action="AddService" class="btn btn-success">Добавить новую услугу</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Заголовок</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditService" asp-route-id="@item.Id" class="btn btn-primary">Редактировать</a>
                    <form method="post" asp-controller="Admin" asp-action="DeleteService" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
