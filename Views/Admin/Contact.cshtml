@using front.Models.ContentModels
@model IEnumerable<ContactInfoModel>

@{
    ViewData["Title"] = "Contact";
}

<h2>Контакты</h2>

<p>
    <a asp-action="AddContact" class="btn btn-success">Добавить новый контакт</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Телефон</th>
            <th>Email</th>
            <th>Адрес</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditContact" asp-route-id="@item.Id" class="btn btn-primary">Редактировать</a>
                    <form method="post" asp-controller="Admin" asp-action="DeleteContact" asp-route-id="@item.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
