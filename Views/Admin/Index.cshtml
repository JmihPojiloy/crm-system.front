@model IEnumerable<LeadModel>

@{
    ViewData["Title"] = "Desktop";
}

<h2>Заявки</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Вопрос</th>
            <th>Контакт</th>
            <th>статус</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lead in Model)
        {
            <tr>
                <td>@lead.Id</td>
                <td>@lead.ClientName</td>
                <td>@lead.ClientQuestion</td>
                <td>@lead.Contact</td>
                <td>@lead.Status</td>
                <td>@lead.Date.ToString("dd-MM-yyyy HH:mm")</td>
                <td>
                    <a asp-controller="Admin" asp-action="EditLead" asp-route-id="@(lead.Id)" class="btn btn-primary">Редактировать</a>
                    <form method="post" asp-action="DeleteLead" asp-route-id="@lead.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

