@using front.Models.ContentModels
@model IEnumerable<ProjectModel>

@{
    ViewData["Title"] = "Project";
}

<h1>Наши проекты</h1>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var project in Model){
            <tr>
                <td>@project.Title</td>
                <td>@project.Description</td>
                <td>
                    <a asp-action="ProjectDetails" asp-route-id="@project.Id" class="btn btn-primary">Подробно</a>
                </td>
            </tr>
        }
    </tbody>
</table>